{
  "name": "express-docker-sample",
  "version": "0.0.1",
  "engines": {
    "node": ">=12.8.1"
  },
  "private": true,
  "author": "Kouhei Kiyama <k.kiyama117@gmail> (https://github.com/kkiyama117/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:kkiyama117/express_docker.git"
  },
  "main": "app.js",
  "scripts": {
    "dev": "node ./bin/www",
    "test": "mocha",
    "format": "eslint --fix",
    "stage": "sudo docker-compose -f docker/docker-compose.yml up",
    "stage_stop": "sudo docker-compose -f docker/docker-compose.yml down",
    "production": "sudo docker-compose -f docker/docker-compose.prod.yml up",
    "production_stop": "sudo docker-compose -f docker/docker-compose.prod.yml down"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^8.1.0",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "mysql": "^2.17.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "mocha": "^6.2.0",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "bin/www": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
