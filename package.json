{
  "name": "express-docker-sample",
  "version": "0.0.1",
  "engines": {
    "node": ">=12.8.1"
  },
  "private": true,
  "author": "Kouhei Kiyama <k.kiyama117@gmail> (https://github.com/kkiyama117/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:kkiyama117/express_docker.git"
  },
  "main": "app.ts",
  "scripts": {
    "dev": "nodemon -L",
    "start": "tsc && node dist/bin/www.js",
    "test": "jest --coverage",
    "lint": "eslint --fix 'src/**/*.ts' 'test/**/*.ts' 'bin/**/*.ts' app.ts ormconfig.ts",
    "watch": "tsc -w",
    "stage": "sudo docker-compose -f docker/docker-compose.yml up",
    "stage_stop": "sudo docker-compose -f docker/docker-compose.yml down",
    "production": "sudo docker-compose -f docker/docker-compose.prod.yml up",
    "production_stop": "sudo docker-compose -f docker/docker-compose.prod.yml down",
    "typeorm": "ts-node ./node_modules/typeorm/cli"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.10.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.1.0",
    "express": "~4.17.3",
    "helmet": "^3.21.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "mysql2": "^1.7.0",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.1.0",
    "ts-node": "^8.4.1",
    "typeorm": "^0.2.19"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/helmet": "^0.0.44",
    "@types/jest": "^24.0.18",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.5",
    "@types/pluralize": "^0.0.29",
    "@types/sinon-express-mock": "^1.3.7",
    "@types/supertest": "^2.0.8",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^3.0.1",
    "@types/yamljs": "^0.2.30",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "sinon": "^7.5.0",
    "sinon-express-mock": "^2.2.1",
    "supertest": "^4.0.2",
    "swagger-ui-dist": "^3.23.11",
    "ts-jest": "^24.1.0",
    "tsdoc": "^0.0.4",
    "typedoc": "^0.15.0",
    "typeorm-factory": "^0.0.13",
    "typescript": "^3.6.3",
    "yamljs": "^0.3.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "docs",
    "**/*.d.ts",
    "build/**/*.js",
    "dist/**/*.js"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  }
}
